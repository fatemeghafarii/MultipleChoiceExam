@using MultipleChoiceTest.Application.Contract.ViewModels
@model RequestDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .limited-width {
        width: 100% !important;
        max-width: 400px !important;
        display: block;
    }
</style>
<!-- نمایش خطاها در صورت وجود -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<form method="post" asp-action="ShowTest">
    <div class="form-group">
        <label asp-for="TestId" for="exampleInputEmail1">آیدی آزمون: </label>
        <input asp-for="TestId" type="text" class="form-control limited-width" placeholder="Enter ExamId">
    </div>
    <div class="form-group">
        <label asp-for="UserId" for="exampleInputPassword1">آیدی کاربر: </label>
        <input asp-for="UserId" type="text" class="form-control limited-width" placeholder="Enter UserId">
    </div>
    <button type="submit" class="btn btn-primary" style="margin-top: 10px;">ورود به آزمون</button>
</form>


